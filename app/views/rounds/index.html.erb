
<div class="container">
  <h1>Rounds</h1>
  <div class="row">
    <div class="col-md-8 col-md-offset-0">
      <table class="table table-bordered table-striped table-hover">
        <thead>
          <tr>
            <th>Date of Round</th>
            <th>Course</th>
            <% if current_golfer.admin? %>
              <th colspan="3"></th>
            <% else %>
              <th colspan="1"></th>
            <% end %>
          </tr>
        </thead>

        <tbody>
          <% @rounds.each do |round| %>
            <tr>
            <td><%= friendly_date(round.date) %></td>
            <td><%= round.course.name %></td>
            <td><%= link_to 'Show Scores', round %></td>
            <% if current_golfer.admin? %>
              <td><%= link_to 'Edit', edit_round_path(round) %></td>
              <td><%= link_to 'Delete', round, method: :delete %></td>
            <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>

      <% if current_golfer.admin? %>
        <%= link_to 'New Round', new_round_path %> | 
      <% end %>
      <!--
      <%= link_to 'Back', root_path %>
      -->
    </div>
  </div>
</div>