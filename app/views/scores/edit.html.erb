<% provide(:title, 'Edit Score') %>

<div class="container">
  <h1>Edit Score</h1>
    <div class="row">
      <div class="col-md-4 col-md-offset-0">

    	<%= form_for([@round, @score]) do |f| %>
  			<%= render 'shared/error_messages', object: f.object %>

         <p>
          <%= f.label 'Golfer:' %>
          <%= f.collection_select(:golfer_id, Golfer.all, :id, :name, prompt: true) %>
          </p>

          <p>
          <%= f.label :score %>
          <%= f.text_field :score, class: 'form-control' %>
          </p>
          
          <p>
          <%= f.submit "Submit", class: "btn btn-primary" %>
          </p>
      
			<% end %>

			<p>
     	<%= link_to 'Back', rounds_path %>
      </p>
  </div>
  </div>
</div>
