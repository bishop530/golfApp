
<div class="container">
  <div class="row">
    <div class="col-md-12 col-md-offset-0">
      <table class="table table-bordered table-striped table-hover">

	<thead>
    <tr>
      <th>Name</th>
      <th>Par</th>
      <th>1</th>
      <th>2</th>
      <th>3</th>
      <th>4</th>
      <th>5</th>
      <th>6</th>
      <th>7</th>
      <th>8</th>
      <th>9</th>
      <th>10</th>
      <th>11</th>
      <th>12</th>
      <th>13</th>
      <th>14</th>
      <th>15</th>
      <th>16</th>
      <th>17</th>
      <th>18</th>
      <% if current_golfer.admin? %>
        <th colspan="2"></th>
      <% end %>
    </tr>
  </thead>

    <%= will_paginate %>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= link_to course.name, course %></td>
        <td><%= course.par %></td>
        <% per_hole_values = get_values(course.par_data) %>
        <% for i in 0..per_hole_values.length-1 do %>
          <td><%= per_hole_values[i] %></td>
        <% end %>
        <% if current_golfer.admin? %>
          <td><%= link_to 'Edit', edit_course_path(course) %></td>
          <td><%= link_to 'Delete', course, method: :delete %></td>
        <% end %>
      </tr>
    <% end %>
	</tbody>

</table>

<% if current_golfer.admin? %>
  <%= link_to 'New Course', new_course_path %> | 
<% end %>
<!--
